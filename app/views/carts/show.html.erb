<article>
  <% if notice %>
    <aside id="notice"><%= notice %></aside>
  <% end %>

  <h2>购物车</h2>
  <table>
    <% @cart.line_items.each do |line_item| %>
      <tr>
        <td class="quantity">
          <%= line_item.quantity %>
        </td>
        <td><%= line_item.product.title %></td>
        <td class="price">
          <%= number_to_currency(line_item.total_price) %>
        </td>
      </tr>
    <% end %>

    <tfoot>
      <tr>
        <th colspan="2">Total:</th>
        <td class="price">
          <%= number_to_currency(@cart.total_price) %>
        </td>
      </tr>
    </tfoot>
  </table>

  <%= button_to "清空购物车", @cart, method: :delete, data: { confirm: '确定清空吗？'} %>
</article>
